<div class="edit">
  <div class="edit-contents">
   Title<br>
   <div class="text_area">
   <%= f.text_field :title, :size=>"20" %>
   </div>
  </div>

  <div class="edit-contents">
   Body<br>
   <div class="text_area">
   <%= f.text_area :body %>
   </div>
  </div>

  <div class="edit-contents">
   <span><%= f.submit "Update Book" %></span>
  </div>
   <% end %>
  <div class="edit-contents">
   <span><%= link_to "Show", show_path %></span>
   <span><%= link_to "Back", book_path %></span>
  </div>
</div>
