<header>

<h1><storong>Editing Book</storong>
</h1>
</header>

<% if flash[:notice] %>
 <p id="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model:@book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this book from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
